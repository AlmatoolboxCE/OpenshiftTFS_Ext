{
    "manifestVersion": 1,
    "id": "oc-deploy-tasks",
    "name": "Openshift Deploy Tools",
    "version": "0.2.0",
    "publisher": "almatoolbox",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Tools for interact and deploying to Red Hat Openshift",
    "categories": [
        "Build and release"
    ],
	"tags": [
		"devops",
		"redhat",
		"deploy"
	],
    "screenshots": [
        {
            "path": "screenshots/start-build.jpg"
        },
        {
            "path": "screenshots/tag.jpg"
        },
        {
            "path": "screenshots/promote.jpg"
        }
    ],
    "content": {
        "details": {
            "path": "README.md"
        },
        "license": {
            "path": "license.md"
        }
    },
	"links": {
        "home": {
            "uri": "www.almaviva.it"
        }, 
        "getstarted": {
            "uri": "http://almatoolboxce.github.io//OpenshiftTFS_Ext//"
        },
		"learn": {
            "uri": "https://github.com//AlmatoolboxCE//OpenshiftTFS_Ext//blob//master//learn.md"
        },
        "repository": {
            "uri": "https://github.com//AlmatoolboxCE//OpenshiftTFS_Ext"
        }
    },
    "branding": {
        "color": "white",
        "theme": "light"
    },
    "icons": {
        "default": "extension-icon.png"        
    },
	
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "files": [
		{
            "path": "oc3tagTask"
        },
		{
            "path": "oc3buildTask"
        },
		{
            "path": "oc3promotionTask"
        }
    ],
    "contributions": [
		{
            "id": "oc3tagTask-1",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "oc3tagTask"
            }
        },
		{
            "id": "oc3buildTask-1",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "oc3buildTask"
            }
        },
		{
            "id": "oc3promotionTask-1",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "oc3promotionTask"
            }
        }
    ]
}
